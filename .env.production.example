# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# ==========================================
# REQUIRED: JWT Configuration
# ==========================================
# Generate a secure random string (use: openssl rand -base64 32)
JWT_SECRET=your_secure_random_string_min_32_chars
JWT_EXPIRES_IN=7d

# ==========================================
# REQUIRED: Database (will be auto-configured by docker-compose)
# ==========================================
# For EC2 Docker deployment, this is set automatically
# For RDS, use: postgresql://username:password@rds-endpoint:5432/dbname
DATABASE_URL=postgresql://roombnb:roombnb_password@postgres:5432/roombnb

# ==========================================
# REQUIRED: Cloudinary (for image uploads)
# ==========================================
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==========================================
# OPTIONAL: Stripe (for payment processing)
# ==========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==========================================
# SERVER Configuration
# ==========================================
NODE_ENV=production
PORT=5000

# ==========================================
# FRONTEND Configuration (for docker-compose.yml)
# ==========================================
# Replace with your EC2 public IP or domain
VITE_API_URL=http://YOUR_SERVER_IP:5000

# Optional: Mapbox for maps
VITE_MAPBOX_TOKEN=your_mapbox_token

# Optional: Stripe public key
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
